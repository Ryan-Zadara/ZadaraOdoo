<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_product_template_form_view_enhancement" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="string">Zadara Product Code</attribute>
                </field>
                <field name="default_code" position="after">
                    <field name="m_code" />
                    <field name="m_product_name"/>
                </field>
                <field name="categ_id" position="after">
                     <field name="sub_categ_id"/>
                 </field>

                <xpath expr="//page[@name='variants']" position="after">
                    <page name="partnumber" string="Part Number">
                        <field name="part_number_ids">
                            <tree>
                                <field name="product_id"/>
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="inherit_product_template_tree_view_enhancement" model="ir.ui.view">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="string">Zadara Product Code</attribute>
                 </field>
                <field name="default_code" position="after">
                    <field name="m_code" />
                    <field name="m_product_name"/>
                    <field name="sub_categ_id" />
                 </field>
            </field>
        </record>

        <record id="inherit_product_template_search_filter" model="ir.ui.view">
            <field name="name">product.template.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="sub_categ_id" string="Sub Category" />
                    <field name="m_code" string="Manufacturer Product Code" />
                    <field name="m_product_name" string="Manufacturer p/n"/>
                </xpath>
            </field>
        </record>


        <record id="inherit_product_product_form_view_enhancement" model="ir.ui.view">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="string">Zadara Product Code</attribute>
                 </field>
            </field>
        </record>

        <record id="inherit_product_variant_tree_view_enhancement" model="ir.ui.view">
            <field name="name">product.product.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="string">Zadara Product Code</attribute>
                 </field>
            </field>
        </record>

        <record id="inherit_stock_move_line_tree_view_enhancement" model="ir.ui.view">
            <field name="name">inherit.stock_move.line.tree1</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="partner_id" />
                </xpath>
            </field>
        </record>

        <record id="inherit_stock_move_line_form_view_enhancement" model="ir.ui.view">
            <field name="name">inherit.stock_move.line.form</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="// group/group[2]/field[@name='owner_id']" position="before">
                    <div class="o_td_label">
                        <label for="partner_id" string="Customer" style="font-weight:bold;" attrs="{'invisible': [('picking_code', '!=', 'outgoing')]}"/>
                        <label for="partner_id" string="Vendor" style="font-weight:bold;" attrs="{'invisible': [('picking_code', '!=', 'incoming')]}"/>
                        <label for="partner_id" string="Contact" style="font-weight:bold;" attrs="{'invisible': [('picking_code', 'in', ['incoming', 'outgoing'])]}"/>
                    </div>
                    <field name="partner_id" nolabel="1"/>
                    <field name="picking_code" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="product_subcategory_form_view" model="ir.ui.view">
            <field name="name">Product SubCategory</field>
            <field name="model">product.subcategory</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product SubCategory">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_subcategory_tree_view" model="ir.ui.view">
            <field name="name">Product SubCategory</field>
            <field name="model">product.subcategory</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Product SubCategory">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_product_subcategory" model="ir.actions.act_window">
            <field name="name">Product Subcategory</field>
            <field name="res_model">product.subcategory</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            name="Product Subcategories"
            id="product_subcategory_menu"
            sequence="10"
            parent="stock.menu_product_in_config_stock"
            action="action_product_subcategory"
        />
    </data>
</odoo>
