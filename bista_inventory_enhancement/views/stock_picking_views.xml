<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_stock_picking_form_view_enhancement" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group//group[1]/field[@name='backorder_id']" position="after">
                    <field name="invoice_no"/>
                    <field name="po_number"/>
                </xpath>
                <xpath expr="//sheet/group//group[2]/field[@name='owner_id']" position="after">
                    <field name="funding_company_id"/>
                </xpath>
            </field>
        </record>

        <record id="inherit_stock_move_line_form_view_enhancement" model="ir.ui.view">
            <field name="name">inherit.stock_move.line.form</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_tag_id" options="{'no_create': True}" groups="stock.group_production_lot"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>