<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="locations_list">
      <field name="name">locations list</field>
      <field name="model">zadara_inventory.locations</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="address"/>
          <field name="location_type"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="zadara_inventory_locations">
      <field name="name">locations window</field>
      <field name="res_model">zadara_inventory.locations</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

   

