      <field name="name">zadara_inventory server</field>

      <field name="model_id" ref="model_zadara_inventory_product"/>
      <field name="state">code</field>
      <field name="code">
action = env['zadara_inventory.product'].search([]).action_()

 
      </field>
    </record>
